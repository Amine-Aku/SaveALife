<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="itemBackground">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@drawable/selector</item>
        <item name="itemTextColor">@drawable/selector</item>
        <item name="menu">@menu/menu_navigation</item>
    </style>

    <style name="button_big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_big</item>
    </style>

    <style name="button_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_medium</item>
    </style>

    <style name="input_field">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="input_field_mini" parent="input_field">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="input_field_area" parent="input_field_mini">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:background">@drawable/bg_input_text_area</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minHeight">130dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="post_titles">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="spinner_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">-35dp</item>
        <item name="android:src">@drawable/ic_arrow_drop_down</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>


</resources>
